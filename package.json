{
  "name": "novel-copilot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run db:migrate:local && wrangler dev",
    "dev:local": "tsx src/server.ts",
    "dev:mobile": "cd mobile && pnpm start",
    "mobile:android": "cd mobile && pnpm android",
    "mobile:ios": "cd mobile && pnpm ios",
    "mobile:ios:package:xtransfer": "bash ./scripts/ios-package-xtransfer.sh",
    "mobile:ios:package:xtransfer:install": "bash ./scripts/ios-package-xtransfer.sh --install",
    "mobile:typecheck": "cd mobile && pnpm exec tsc --noEmit",
    "deploy": "pnpm build:web && npm run db:migrate:remote && wrangler deploy",
    "build:web": "cd web && pnpm build",
    "db:init": "wrangler d1 execute novel-copilot-db --file=./src/db/schema.sql",
    "db:init:local": "wrangler d1 execute novel-copilot-db --local --file=./src/db/schema.sql",
    "db:migrate:local": "wrangler d1 migrations apply novel-copilot-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply novel-copilot-db --remote",
    "typecheck": "tsc --noEmit",
    "batch": "tsx src/runBatch.ts",
    "server": "tsx src/server.ts"
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "hono": "^4.11.0",
    "jszip": "^3.10.1",
    "openai": "^6.10.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "wrangler": "^4.11.0"
  }
}
