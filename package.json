{
  "name": "novel-copilot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "tsx src/server.ts",
    "deploy": "pnpm build:web && wrangler deploy",
    "build:web": "cd web && pnpm build",
    "db:init": "wrangler d1 execute novel-copilot-db --file=./src/db/schema.sql",
    "db:init:local": "wrangler d1 execute novel-copilot-db --local --file=./src/db/schema.sql",
    "migrate": "tsx src/migrate.ts",
    "typecheck": "tsc --noEmit",
    "batch": "tsx src/runBatch.ts",
    "server": "tsx src/server.ts"
  },
  "dependencies": {
    "@google/genai": "^0.14.0",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "hono": "^4.11.0",
    "openai": "^6.10.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "wrangler": "^4.11.0"
  }
}
